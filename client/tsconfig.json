{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "types": ["@citizenfx/client", "@types/node", "@types/jest"],
    "lib": ["ES2020"],
    "paths": {
      "@common/*": ["../common/*"],
      "@config/*": ["../config/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*", "../common/**/*", "../config/*"]
}
